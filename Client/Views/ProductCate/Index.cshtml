@{
    ViewData["Title"] = "Product Category";
}
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@using Client.Models
@model dynamic
<div id="content">
    <div id="content-left">
        <h3>CATEGORY</h3>
        <ul>
            @foreach (CategoryDto cate in Model.categories)
            {
                <a class="nav-link text-dark" asp-area="" asp-controller="ProductCate" asp-action="Index" asp-route-id="@cate.categoryId">
                <li>@cate.categoryName</li>
                </a>
            }
        </ul>
    </div>
    <div class="row">
        @foreach (ProductListDto product in Model.products)
        {
            <div class="col-sm-4">
                <div class="product">
                    <a href="detail.html"><img src="img/1.jpg" width="100%" /></a>
                    <div class="name"><a href="detail.html">@product.productName</a></div>
                    <div class="price">$@product.unitPrice</div>
                    <div><a href="">Buy now</a></div>
                </div>
            </div>
        }

    </div>
</div>